<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:id="@+id/lay_Account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:id="@+id/text_start"
            android:text="StartDate"
            android:layout_marginLeft="@dimen/dp_0.5"
            android:layout_marginTop="@dimen/dp_0.5"
            android:textSize="@dimen/dp_10"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30" />

        <TextView
            android:id="@+id/startdate"
            android:text=""
            android:layout_toRightOf="@id/text_start"
            android:layout_width="@dimen/dp_120"
            android:background="@drawable/shape"
            android:layout_height="@dimen/dp_30" />
        <Button
            android:id="@+id/choosestart"
            android:text="Choose Date"
            android:background="@drawable/btn_bg_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/startdate"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_EndDate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">

        <TextView
            android:id="@+id/text_edate"
            android:text="EndDate"
            android:layout_marginLeft="@dimen/dp_0.5"
            android:layout_marginTop="@dimen/dp_0.5"
            android:textSize="@dimen/dp_10"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30" />

        <TextView
            android:id="@+id/enddate_text"
            android:text=""
            android:layout_toRightOf="@id/text_edate"
            android:layout_width="@dimen/dp_120"
            android:background="@drawable/shape"
            android:layout_height="@dimen/dp_30" />
        <Button
            android:id="@+id/chooseEndate"
            android:text="Choose Date"
            android:background="@drawable/btn_bg_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/enddate_text"/>

    </RelativeLayout>
</LinearLayout>
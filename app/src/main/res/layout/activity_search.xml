<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo_pc.monashfriendfinder.SearchActivity">
    <LinearLayout
        android:id="@+id/lay_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/lay_firstparty"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="@dimen/dp_120">
            <LinearLayout
                android:id="@+id/lay_radio"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <CheckBox
                    android:id="@+id/fsport"
                    android:text="fsport"
                    android:textColor="@color/brown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/fmovie"
                    android:text="fmovie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/fsport"/>
                <CheckBox
                    android:id="@+id/gender"
                    android:text="gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/fmovie"/>
                <CheckBox
                    android:id="@+id/course"
                    android:text="course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_toRightOf="@id/gender"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay_checkbox"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <CheckBox
                    android:id="@+id/suburb"
                    android:text="suburb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/stumode"
                    android:text="stumode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/course"/>
                <CheckBox
                    android:id="@+id/firstname"
                    android:text="firname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/stumode"/>
                <CheckBox
                    android:id="@+id/subname"
                    android:text="surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/firstname"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lay_checkbox1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <CheckBox
                    android:id="@+id/nation"
                    android:text="nationality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/nalanguage"
                    android:text="nalanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/nation"/>
                <Button
                    android:id="@+id/match"
                    android:text="Match"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:id="@+id/lay_secondparty"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_120"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/context"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
